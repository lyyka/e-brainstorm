<!-- Modal -->
div(class="modal fade" id="changeSubjectModal" tabindex="-1" role="dialog" aria-labelledby="changeSubjectModalTitle" aria-hidden="true")
    div(class="modal-dialog modal-dialog-centered" role="document")
        div(class="modal-content")
            div(class="modal-header")
                h5(class="modal-title" id="changeSubjectModalTitle") Change subject
                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;
            div(class="modal-body")
                input(type = "text" class="w-100 rounded shadow-sm border px-2 py-3" placeholder = "Subject to be discussed" id = "update-subject-input")
            div(class="modal-footer")
                button(type="button" class="rounded border-0 py-2 gray-bg text-dark" data-dismiss="modal") Close
                button(type="button" id = "update-subject" class="rounded border-0 py-2 pink-bg text-white") Save changes